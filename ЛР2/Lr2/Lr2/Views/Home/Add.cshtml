@{
    ViewData["Title"] = "Добавление товара";
}
<h2>Форма добавления товара</h2>

<form method="post" class="form-horizontal" role="form">
    <input type="hidden" value="@ViewBag.User" name="User" />
    <p>Для добавления товара заполните следующие поля:</p>
    <div class="form-group">
        <label for="Name" class="col-md-2 control-label">Название:</label>
        <div class="col-md-4">
            <input type="text" name="Name" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Description" class="col-md-2 control-label">Описание:</label>
        <div class="col-md-4">
            <input type="text" name="Description" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label for="Quantity" class="col-md-2 control-label">Количество:</label>
        <div class="col-md-4">
            <input type="text" name="Quantity" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <label class="col-md-2 control-label">Цена:</label>
        <div class="col-md-4">
            <input type="text" name="Price" class="form-control" />
        </div>
    </div>
    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <input type="submit" class="btn btn-default" value="Добавить" />
        </div>
    </div>
</form>
