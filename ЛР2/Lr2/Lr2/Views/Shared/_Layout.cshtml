<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.css" />
    <script src="~/js/site.js" asp-append-version="true"></script>
</head>
<body>
    <!--меню-->
    <nav class="navbar navbar-expand-md navbar-dark bg-dark">
        <div class="container">
            <div class="collapse navbar-collapse">
                <ul class="navbar-nav mr-auto">
                    <li><a href="~/Home/Index" class="navbar-brand">Главная</a></li>
                    <li><a href="~/Home/Sale" class="navbar-brand">Список продаж</a></li>
                    <li><a href="~/Home/Orders" class="navbar-brand">Корзина</a></li>
                </ul>
                <ul class="navbar-nav">
                    <li><a href="~/Account/Register" class="navbar-brand">Регистрация</a></li>
                    <li><a href="~/Account/Login" class="navbar-brand">Войти</a></li>
                </ul>
            </div>
        </div>
    </nav>
    <!--основной контент-->
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>© 2021 - ProductStore</p>
        </footer>
    </div>
</body>
</html>
